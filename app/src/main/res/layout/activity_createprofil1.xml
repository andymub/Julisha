<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.julisha.afrisuser.julisha.CreateProfil1Activity">

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Graytexte">

        <TextView
            android:id="@+id/sinConnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:text="@string/creer_compte"
            android:textColor="#54abee"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/imac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/julisha_logo" />

        <TextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sinConnexion"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Vous avez déjà un compte?"
            android:textColor="@color/DarkGray"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="104dp"
            android:background="@drawable/circleangle"
            android:orientation="horizontal"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp">

                <ImageView
                    android:id="@+id/createprofimg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/angle2" />

                <ImageView
                    android:id="@+id/imgcreate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingLeft="3dp"
                    android:src="@drawable/ic_account_box_black" />
            </FrameLayout>

            <TextView
                android:id="@+id/signupforfree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="@string/creer_compte1"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
    </RelativeLayout>
    </FrameLayout>